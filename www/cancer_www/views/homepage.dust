{>layout /}

{<pagescript}
    <script>
        $(function () {
            var currslideidx = 0;
            var tm = 0;
            setindex = function (idx) {
                currslideidx = idx;
                slidepic();
            }

            slidepic = function () {
                clearTimeout(tm);
                currslideidx = (currslideidx > 6) ? 0 : currslideidx;
                $(".slideimg").hide();
                $("#slideimg" + currslideidx).show();
                $(".slideidx").removeClass("curridx");
                $("#imgidx" + currslideidx).addClass("curridx");
                currslideidx++;
                tm = setTimeout(slidepic, 5000);
            }
            slidepic();
        });

    </script>
    <style>
        .method .col-sm-3{
            color:rgb(45,103,150);
            padding-top: 150px;;
        }
        .method-xs .col-xs-6{
            color:rgb(45,103,150);
            padding-top: 100px;;
        }
    </style>
{/pagescript}
{<title}
    Welcome lifestar
{/title}

